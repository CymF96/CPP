{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug BTC",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ex00/btc",
            "args": ["CSV/bitcoin_conversion.csv"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/ex00",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with Make"
        }
    ]
}
